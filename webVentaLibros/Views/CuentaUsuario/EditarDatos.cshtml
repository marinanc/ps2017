    </div> <!-- End site branding area -->

    <div class="mainmenu-area" style="background-color: #363636">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
