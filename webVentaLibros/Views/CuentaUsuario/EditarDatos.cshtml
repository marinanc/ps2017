                                    @Html.ActionLink("Carrito", "Carrito", "Cart")
                                </li>
                            }
                            <li>
                                @if (Request.IsAuthenticated)
                                {
                                    @Html.ActionLink("Cerrar sesión", "Logout", "User")
                                }
                                else
                                {
                                    @Html.ActionLink("Iniciar sesión", "Login", "User")
