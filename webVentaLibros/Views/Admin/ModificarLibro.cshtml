    <script>
        $('#precio').keypress(function (tecla) {
            if ((tecla.charCode < 48 || tecla.charCode > 57) && (tecla.charCode != 46) && (tecla.charCode != 8)) {
                return false;
            } else {
                var len = $('#precio').val().length;
                var index = $('#precio').val().indexOf('.');

                if (index > 0 && tecla.charCode == 46) {
                    return false;
                }

                if (index > 0) {
                    var CharAfterdot = (len + 1) - index;
                    if (CharAfterdot > 3) {
                        return false;
                    }
                }
            }

            return true;
        });
