                            <input type="submit" value="Buscar">
                        </form>
                    </div>

                    <div class="single-sidebar">
                        <h2 class="sidebar-title">Generos</h2>
                        <div class="list-group">

                            @foreach (var genero in ViewBag.listadoGeneros)
                            {
                                <div class="list-group-item">
                                    @Html.ActionLink((string)genero.nombre, "MostrarLibros", new { idGenero = genero.idGenero })
                                </div>

                            }

                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="product-content-right">

                        @if (ViewBag.listadoLibros != null)
                        {
                            foreach (var libro in ViewBag.listadoLibros)
                            {
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="product-images">
                                            <div class="product-main-img">
                                                <img src="../@libro.foto" alt="">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="product-inner">
                                            <h2 class="product-name">@libro.titulo</h2>
                                            @if (Request.IsAuthenticated)
                                            {
                                                <div class="form-group" style="text-align:center">
                                                    <input type="text" name="codLibro" value="@libro.idPublicacion" hidden />
                                                    <button type="submit" class="btn-info" onclick="mostrar()">¡Lo quiero!</button>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="form-group" style="text-align:center">
                                                    <p>
                                                        <span style="color: black;">@Html.ActionLink("Debe iniciar sesión para realizar intercambos", "Login", "User", new { @class = "actionLink" },null)</span>
                                                    </p>
                                                </div>
                                            }

                                            <div class="product-inner-category">
                                                <p>Género: @libro.Generos.nombre</p>
                                                <p>Autor: @libro.autor</p>
                                            </div>

                                            <div role="tabpanel">
                                                <ul class="product-tab" role="tablist">
                                                    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Descripción</a></li>
                                                    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Datos del usuario</a></li>
                                                </ul>
                                                <div class="tab-content">
                                                    <div role="tabpanel" class="tab-pane fade in active" id="home">

                                                        <p>
                                                            @libro.descripcion
                                                        </p>

                                                    </div>
                                                    <div role="tabpanel" class="tab-pane fade" id="profile">

                                                        <p><label>Ubicación:</label> @libro.Usuarios.Localidades.nombre, @libro.Usuarios.Provincias.nombre</p>
                                                        <p><label>Nombre:</label> @libro.Usuarios.nombreUsuario</p>
                                                        <!--
                                                        <p><label>Calificacion:</label> </p>
                                                        -->

                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            <!-- LISTA DE INTERCAMBIOS DEL USUARIO CONECTADO -->
                                <div class="row" id="oculto" style="display:none">
                                    <!--TABLA CON LISTADO DE PUBLICACIONES-->
                                    <div class="panel-body">
                                        <br />
                                        <br />
                                        <br />
                                        <h3>Seleccioná por cuál de tus libros querés realizar el intercambio</h3>
                                        <br />
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-sm-9">
                                                    <table id="example" class="display" cellspacing="0" width="100%">
                                                        <thead>
                                                            <tr>

                                                                <th>Codigo</th>
                                                                <th>Título</th>
                                                                <th>Género</th>
                                                                <th>Autores</th>
                                                                <th>Fecha</th>

                                                            </tr>
                                                        </thead>
                                                        <tfoot>
                                                            <tr>

                                                                <th>Codigo</th>
                                                                <th>Título</th>
                                                                <th>Género</th>
                                                                <th>Autores</th>
                                                                <th>Fecha</th>

                                                            </tr>
                                                        </tfoot>
                                                        <tbody>

                                                            @foreach (var publicacion in ViewBag.listadoLibrosPublicados)
                                                            {
                                                                <tr>

                                                                    <td>@publicacion.idPublicacion</td>
                                                                    <td>@publicacion.titulo</td>
                                                                    <td>@publicacion.genero</td>
                                                                    <td>@publicacion.autor</td>
                                                                    <td>@publicacion.fechaHoraAlta</td>

                                                                </tr>
                                                            }

                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--FIN LISTADO PUBLICACIONES-->
                                </div>
                                 <!--FIN LISTA DE INTERCAMBIOS DEL USUARIO CONECTADO -->
                                <div class="row">

                                    <form id="formOculto" style="display:none; text-align:center" action=@Url.Action("PedirIntercambio","Intercambio") method="POST" role="form">

                                        <input type="text" name="codPublicacionUsu1" id="codPublicacionUsu1" value="@libro.idPublicacion" hidden />

                                    </form>
                                </div>

                            }
