    <script>
        'use strict';
        var $ = jQuery;
        $.getScript("https://cdn.datatables.net/v/bs/dt-1.10.15/se-1.2.2/datatables.min.js", function () {
            $(document).ready(function () {
                $('#example').DataTable({
                    select: {
                        style: 'single'
                    }
                });
            });

            $(document).ready(function () {
                var tbl = $('#example').DataTable();
                $('#example tbody').on('click', 'tr', function () {

                    var sdata = tbl.row(this).data()[0];

                    if (document.getElementById("botonForm")) {
                        var child1 = document.getElementById("botonForm");
                        var child2 = document.getElementById("codPublicacionUsu2");
                        var parent = document.getElementById("formOculto");
                        parent.removeChild(child1);
                        parent.removeChild(child2);
                    }

                    var input = document.createElement("input");
                    var btn = document.createElement("button");

                    input.setAttribute("type", "hidden");
                    input.setAttribute("name", "codPublicacionUsu2");
                    input.setAttribute("id", "codPublicacionUsu2");
                    input.setAttribute("value", String(sdata));

                    btn.setAttribute("type", "submit");
                    btn.setAttribute("class", "btn-info");
                    btn.setAttribute("id", "botonForm");
                    var t = document.createTextNode("Pedir intercambio");       // Create a text node
                    btn.appendChild(t);

                    //append to form element that you want .
                    document.getElementById("formOculto").appendChild(input);
                    document.getElementById("formOculto").appendChild(btn);

                    document.getElementById('formOculto').style.display = 'block';
                });
            });
        });
    </script>


    <script type="text/javascript">
        function mostrar() {
            document.getElementById('oculto').style.display = 'block';
            location.href = "#oculto";
        }
    </script>

